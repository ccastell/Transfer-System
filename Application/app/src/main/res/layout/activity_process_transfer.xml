<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_process_transfer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.transfer.ProcessTransferActivity"
    android:background="@color/colorBackground">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:gravity="center"
        android:background="@color/colorWhite"
        android:clickable="true"
        android:focusableInTouchMode="true" >


        <TextView
            android:text="Lorem Ispum 50x50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/article_name_textview"
            android:textSize="35dp"
            android:textColor="@color/colorBlack"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/article_number_layout"
            android:layout_marginTop="10dp"
            android:layout_below="@id/article_name_textview"
            android:weightSum="2">
            <TextView
                android:text="Article Number:"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:textSize="25dp"
                android:textColor="@color/colorBlack"
                android:id="@+id/article__number_text"
                />

            <TextView
                android:text="123.456.789"
                android:layout_width="166dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:textSize="25dp"
                android:textColor="@color/colorBlack"
                android:textAlignment="viewEnd"
                android:id="@+id/article__number_view"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/date_layout"
            android:layout_marginTop="10dp"
            android:layout_below="@id/article_number_layout"
            android:weightSum="2">
            <TextView
                android:text="Date:"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:textSize="25dp"
                android:textColor="@color/colorBlack"
                />

            <TextView
                android:text="2/3/2016"
                android:layout_width="166dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:textSize="25dp"
                android:textColor="@color/colorBlack"
                android:textAlignment="viewEnd"
                android:id="@+id/date__text_view"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/location_layout"
            android:layout_marginTop="10dp"
            android:layout_below="@id/date_layout">

            <TextView
                android:text="Location:"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:textSize="25dp"
                android:textColor="@color/colorBlack"/>

            <Spinner
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:entries="@array/departments"
                android:background="@drawable/boxwithborder"
                android:id="@+id/spinner"
                android:textSize="25sp"
                android:layout_gravity="right"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location_layout"
            android:id="@+id/count_layout"
            android:layout_marginTop="10dp"
            android:weightSum="1.0">

            <TextView
                android:text="Count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="25dp"
                android:textColor="@color/colorBlack"
                android:layout_gravity="left"
                android:layout_weight="0.50"
                android:gravity="left|center" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="25dp"
                android:background="@drawable/boxwithborder"
                android:hint="Count"
                android:padding="10dp"
                android:id="@+id/count_edit_view"
                android:layout_weight=".5" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttons_layout"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/count_layout"
            android:weightSum="1.0">

            <Button
                android:text="Back"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_button_height"
                android:textSize="@dimen/activity_button_textsize"
                android:id="@+id/back_button"
                android:layout_weight=".5"
                android:background="@color/colorRed"
                android:textColor="@color/colorWhite"
                android:layout_marginRight="5dp"
                android:onClick="backButton"/>

            <Button
                android:text="Done"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_button_height"
                android:textSize="@dimen/activity_button_textsize"
                android:id="@+id/done_button"
                android:layout_weight=".5"
                android:background="@color/colorAccent"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="5dp"
                android:onClick="processButton"/>
        </LinearLayout>

    </RelativeLayout>
    </ScrollView>

</RelativeLayout>
