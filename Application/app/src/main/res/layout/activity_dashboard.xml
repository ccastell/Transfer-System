<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorBackground"
    tools:context="com.example.transfer.Dashboard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="@color/colorWhite"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:gravity="center">


        <TextView
            android:text="Lorem Ispum 50x50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/article_name_textview"
            android:textSize="30dp"
            android:textColor="@color/colorBlack"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_inputbox_height"
            android:layout_below="@id/article_name_textview"
            android:textColor="@color/colorBlack"
            android:inputType="textPersonName"
            android:hint="Article Number"
            android:textSize="@dimen/activity_inputbox_textsize"
            android:padding="10dp"
            android:id="@+id/article_number_input"
            android:background="@drawable/boxwithborder"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/date_view"
            android:layout_marginTop="10dp"
            android:layout_below="@id/article_number_input"
            android:weightSum="2">
            <TextView
                android:text="Date:"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:textSize="25dp"
                android:textColor="@color/colorBlack"
                />

            <TextView
                android:text="2/3/2016"
                android:layout_width="166dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:textSize="25dp"
                android:textColor="@color/colorBlack"
                android:textAlignment="viewEnd"
                android:id="@+id/date__text_view"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/location_view"
            android:layout_marginTop="10dp"
            android:layout_below="@id/date_view"
            android:weightSum="2">

            <TextView
                android:text="Location:"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:textSize="25dp"
                android:textColor="@color/colorBlack"/>

            <Spinner
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:entries="@array/departments"
                android:background="@drawable/boxwithborder"
                android:id="@+id/spinner"
                android:textSize="25dp"
                android:layout_gravity="right"/>
        </LinearLayout>


        <Button
            android:text="Done"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_button_height"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/activity_button_textsize"
            android:id="@+id/done_button"
            android:layout_below="@+id/location_view"
            android:background="@color/colorAccent"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorWhite"
            android:layout_marginBottom="10dp" />


    </RelativeLayout>


</RelativeLayout>
